<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.barseghyan_massa.nsi_prospect">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nsiprospect">

        <activity
            android:name=".activities.AccountSettingsActivity"
            android:label="@string/title_activity_account_settings"
            android:theme="@style/Theme.Nsiprospect.NoActionBar" />
        <activity android:name=".activities.UpdateProspectActivity" />
        <activity android:name=".activities.AddProspectActivity" />
        <activity android:name=".activities.HomepageActivity" />
        <activity android:name=".activities.LoginActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AppSettingsActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>